int main()
{	int ch;
	printf("enter which program you want to execute:\n 1.print_digit\n2.Day-Week\n3.money\n4.difference in dates \n5.atm \n6.age_division\n");
	scanf("%d",&ch);
	switch(ch){
	case 1:print_digit();
	break;
	case 2:if(! day_week())
			{printf("exiting the program\n ");
			return 0;}
	break;
	case 3:money();
	break;
	case 5:if(! atm()){
			printf("atm program exited\n");return 0;}
	break;
	case 6:age_div();
	break;
	}
	return 0;

}



























